# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (Neon.tech, Supabase, or other provider)
DATABASE_URL="postgresql://user:password@host:5432/basktball?sslmode=require"

# =============================================================================
# REDIS CACHE (Upstash)
# =============================================================================
# Get from https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# =============================================================================
# AI (DeepSeek)
# =============================================================================
# Get from https://platform.deepseek.com
DEEPSEEK_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# AUTHENTICATION (NextAuth)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin Credentials (for initial admin user)
ADMIN_EMAIL="admin@basktball.com"
ADMIN_PASSWORD="your-admin-password"

# =============================================================================
# ANALYTICS & SEO
# =============================================================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Google Search Console verification (optional)
GOOGLE_SITE_VERIFICATION=""

# =============================================================================
# EXTERNAL APIs (Optional - for fallback data)
# =============================================================================
# BallDontLie API (free, no key needed for basic usage)
# ESPN API (public endpoints, no key needed)

# =============================================================================
# API RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_INSIGHTS=true
ENABLE_BETTING_FEATURES=false
MAINTENANCE_MODE=false

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Set to "production" on Vercel
NODE_ENV="development"

# Vercel Cron Secret (generate with: openssl rand -base64 32)
CRON_SECRET="your-cron-secret-here"
